{
  // Mute general sounds
  "audioCues.enabled": "off",
  "audioCues.volume": 0,
  "accessibility.signals.enabled": false,
  // Use visual bell instead of audible ding in terminal
  "terminal.integrated.enableVisualBell": true,

  // Formatting & Editor Behavior
  "editor.formatOnSave": true,
  "editor.formatOnSaveMode": "modificationsIfAvailable",
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.codeActionsOnSave": {
    "source.organizeImports": "explicit",
    "source.fixAll": "explicit"
  },
  // TypeScript Preferences
  "typescript.preferences.importModuleSpecifier": "non-relative",
  "typescript.updateImportsOnFileMove.enabled": "always",
  // CSS Modules Intellisense
  "css.modules.completion": true,
  "css.validate": true,
  // Files
  "files.eol": "\n",
  "files.insertFinalNewline": true,
  // Reduce file watching pressure on Windows (Watcher/Antivirus)
  "files.watcherExclude": {
    "**/.git/**": true,
    "**/node_modules/**": true,
    "**/.next/**": true,
    "**/dist/**": true,
    "**/.turbo/**": true
  },
  "search.exclude": {
    "**/node_modules": true,
    "**/.next": true,
    "**/dist": true,
    "**/.turbo": true
  },
  // Emmet in TSX
  "emmet.includeLanguages": {
    "javascript": "javascriptreact",
    "typescript": "typescriptreact"
  },
  // Reduce noise
  "javascript.suggestionActions.enabled": false,
  // Accessibility: do not force screen reader mode to reduce extra audio
  "editor.accessibilitySupport": "auto",
  // Copilot (if installed) inline suggestions enable
  "github.copilot.inlineSuggest.enable": true,
  // TypeScript server memory (large Next.js benefit)
  "typescript.tsserver.maxTsServerMemory": 4096,
  // If ESLint installed, run only on save to reduce background work
  "eslint.run": "onSave",
  // Optional: reduce Git background activity if lag persists
  "git.autofetch": false,
  // Prevent accidental large rename suggestions
  "typescript.suggest.completeFunctionCalls": false,
  // Enable bracket pair guides for readability
  "editor.bracketPairColorization.enabled": true,
  // Format on paste for consistency
  "editor.formatOnPaste": true,
  // Disable inline style lint false positives (future customization)
  "stylelint.enable": true,
  // Path Intellisense (if extension present) - prefer absolute alias
  "path-intellisense.mappings": {
    "@": "${workspaceFolder}/src"
  }
}
